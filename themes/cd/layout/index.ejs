<header>
	<div class="logo">
		<img src="/img/logo.png" alt="Logo">
	</div>
	<h1><%= config.title %></h1>
	<p><%= config.subtitle %></p>
</header>
<div class="hr"></div>
<section class="posts">
	<% page.posts.each(function(post){ %>
	<a href="<%- url_for(post.path) %>">
		<span class="date"><%= date(post.date, config.date_format) %></span>
		<span class="title"><%= post.title %></span>
	</a>
	<% }) %>
</section>
